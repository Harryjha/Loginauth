@model CRUD_Dapper.Models.Destination

@{
    ViewData["Title"] = "Edit Destination";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Destination</h2>

    <form asp-action="EditDestination" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label>Name</label>
            <input type="text" asp-for="Name" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
        </div>

        <div class="form-group mb-3">
            <label>Price</label>
            <input type="number" asp-for="Price" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Image URL</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Update Destination</button>
        <a asp-action="MyDestinations" class="btn btn-secondary">Cancel</a>
    </form>
</div>

