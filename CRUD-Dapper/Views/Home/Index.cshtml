@{
    ViewData["Title"] = "Explore the World";
}

<style>
    /* Hero Section */
    .hero {
        background: url('/bgnet.jpg') no-repeat center center/cover;
        height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        position: relative;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
    }

    .hero-content {
        z-index: 1;
    }

    .cta-btn {
        background: #ff7f50;
        border: none;
        padding: 10px 20px;
        font-size: 1.2rem;
    }

        .cta-btn:hover {
            background: #ff6347;
        }

    /* Section Styling */
    .section {
        padding: 60px 0;
    }

    /* Destination Cards */
    .destination-card {
        transition: transform 0.3s ease;
    }

        .destination-card:hover {
            transform: scale(1.05);
        }
</style>

<!-- Hero Section -->
<div class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content text-center text-white">
        <h1 class="display-3">Explore the World with Us</h1>
        <p class="lead">Find your perfect vacation destination and embark on an unforgettable journey.</p>
        <a href="@Url.Action("Destinations", "Home")" class="btn btn-lg cta-btn text-white">Book Your Trip</a>
    </div>
</div>

<!-- Popular Destinations -->
<section class="section bg-light">
    <div class="container text-center">
        <h2 class="mb-4">Popular Destinations</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card destination-card">
                    <img src="/parish.jpg" class="card-img-top" alt="Paris">
                    <div class="card-body">
                        <h5 class="card-title">Paris, France</h5>
                        <p class="card-text">Experience the charm of the Eiffel Tower and rich French culture.</p>
                        <a href="@Url.Action("Destinations", "Home")" class="btn btn-primary">Explore</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card destination-card">
                    <img src="/bali.webp" class="card-img-top" alt="Bali">
                    <div class="card-body">
                        <h5 class="card-title">Bali, Indonesia</h5>
                        <p class="card-text">Discover tropical beaches and breathtaking landscapes.</p>
                        <a href="@Url.Action("Destinations", "Home")" class="btn btn-primary">Explore</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card destination-card">
                    <img src="/swiz.jpg" class="card-img-top" alt="Switzerland">
                    <div class="card-body">
                        <h5 class="card-title">Switzerland</h5>
                        <p class="card-text">Enjoy stunning mountain views and world-class skiing.</p>
                        <a href="@Url.Action("Destinations", "Home")" class="btn btn-primary">Explore</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="section">
    <div class="container text-center">
        <h2 class="mb-4">Why Travel With Us?</h2>
        <div class="row">
            <div class="col-md-4">
                <i class="fas fa-plane fa-3x text-primary mb-3"></i>
                <h5>Easy Booking</h5>
                <p>Book your dream vacation in just a few clicks.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-star fa-3x text-primary mb-3"></i>
                <h5>Top Destinations</h5>
                <p>Handpicked locations with the best experiences.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-user-shield fa-3x text-primary mb-3"></i>
                <h5>24/7 Support</h5>
                <p>We are here to assist you anytime, anywhere.</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="section text-center">
    <h2>Ready to Explore?</h2>
    <p>Book your next adventure with us today!</p>
    <a href="@Url.Action("Destinations", "Home")" class="btn btn-lg btn-warning">Start Your Journey</a>
</section>
